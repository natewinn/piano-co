.dialog.dialog-success
  / %span.glyphicon.glyphicon-user &nbsp;
  = link_to "Add a New Customer", new_customer_path, class: "button btn btn-success btn-wide mll btn-embossed mlm"
.container-fluid
  .col-sm-12
    %table.table.table-striped
      %thead
        %tr
          %th Customer Name
          %th Email Address
          %th Address
          %th Phone
          %th Remove 
      %tbody 
        - @customers.each do |f|
          %tr
            %td= link_to "#{f.first_name} #{f.last_name}", customer_path(f)
            %td= link_to "#{f.e_address}", "mailto:#{f.e_address}?subject=A Message from #{current_user.company.name}"
            %td= link_to "#{f.address_1} #{f.city}, #{f.state} #{f.zip_code}", "https://www.google.com/maps/dir//#{f.latitude},#{f.longitude}/"
            %td= link_to number_to_phone("#{f.phone}", area_code: true), "tel:+1-#{f.phone}"             
            %td= link_to "Delete", customer_path(f), method: :delete, class: "button btn btn-xs btn-inverse btn-embossed mlm"