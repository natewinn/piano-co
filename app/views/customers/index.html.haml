.container-fluid
  .col-sm-offset-4.col-sm-4.col-sm-offset-4
    = link_to "Add New Customer", new_customer_path, class: "button btn btn-primary btn-sm pull-right"
  .col-sm-12
    %table.table.table-hover
      %thead
        %tr
          %th Customer Name
          %th Email Address
          %th Address
          %th Phone
          %th Update 
      %tbody 
        - @customers.each do |f|
          %tr
            %td= link_to "#{f.first_name} #{f.last_name}", customer_path(f)
            %td= link_to "#{f.e_address}", "mailto:#{f.e_address}?subject=A Message from PianoScheduler"
            %td= link_to "#{f.address_1} #{f.city}, #{f.state} #{f.zip_code}", "https://www.google.com/maps/dir//#{f.latitude},#{f.longitude}/"
            %td= link_to number_to_phone("#{f.phone}", area_code: true), "tel:+1-#{f.phone}"             
            %td= link_to "Delete Customer", customer_path(f), :method => :delete, :class => "btn btn-xs btn-danger", :data => { :confirm => 'Click "OK" to remove task from list.' }

            