.container-fluid
  .col-sm-offset-1.col-sm-10.col-sm-offset-1
    %table.table.table-hover
      %thead
        %tr
          %th Company Name
          %th Owner Name
          %th Email Address
          %th Update Profile
          %th Delete Profile 
      %tbody
        - @companies.each do |f|
          %tr
            %td= link_to "#{f.name}", company_path(f)
            - f.companies.each do |u|
              %td= link_to "#{u.email}", "mailto:#{u.email}?subject=A Message from PianoScheduler"
              %td= link_to "Update", edit_company_path(f), class: "button btn btn-xs btn-warning"
              %td= link_to "Delete", company_path(f), method: :delete, class: "button btn btn-xs btn-danger"