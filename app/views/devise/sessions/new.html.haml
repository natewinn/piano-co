.header
  .container.col-sm-offset-4.col-sm-4.col-sm-offset-4
    %form.form-signin{role: "form"}
    %h4.form-signin-heading Please Sign In 
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      = f.email_field :email, autofocus: true, :placeholder => "Email", class: "input form-control"
      %br
      = f.password_field :password, :placeholder => "Password", autocomplete: "off", class: "input form-control"
      %br
      %div= f.submit "Sign in", class: "button btn btn-lg btn-primary btn-block btn-embossed"
    %br
    = render "devise/shared/links"