.header
	.container.col-sm-offset-4.col-sm-4.col-sm-offset-4
		%form.form-signin{role: "form"}
		%h4.form-signin-heading Forgot Password?
		= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
			= f.email_field :email, autofocus: true, :placeholder => "Email", class: "input form-control"
			%br
			%div= f.submit "Send Password Reset", class: "button btn btn-lg btn-primary btn-block btn-embossed"
			%br
		= render "devise/shared/links"