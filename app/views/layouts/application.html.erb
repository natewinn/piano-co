<!DOCTYPE html>
<html>
<head>
  <title>PianoCo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
  <%= javascript_tag do %>
<% end %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-default" role="navigation">
	  <div class="container-fluid">
	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <a class="navbar-brand" href="#">Piano Manager</a>
	      <ul class="nav navbar-nav">
	        <li class="<%= 'active' if current_page?(customers_path) %>">
	          <%= link_to "Customers", customers_path %>
	        </li>
	        <li class="<%= 'active' if current_page?(services_path) %>">
	          <%= link_to "Services", services_path %>
	        </li>
	        <li class="<%= 'active' if current_page?(events_path) %>">
	          <%= link_to "Calendar", events_path %>
	        </li>
	      </ul>
	      <!-- <div class="navbar-left">
	        <form class="navbar-form" role="search">
	          <div class="form-group">
	            <div class="left-inner-addon ">
    						<i class="glyphicon glyphicon-search"></i>
    						<input type="text" class="form-control" />
							</div>
	          </div>
	          <button class="btn btn-default" type="submit">Search</button>
	        </form>
	      </div> -->
	      <div class="navbar-right">
	        <% if user_signed_in? %>
	          <p class="navbar-text"><%= current_user.first_name %> <%= current_user.last_name %></p>
	          <%= link_to('Log out', destroy_user_session_path, :method => :delete, class: "button btn btn-default navbar-btn") %>
	        <% else %>
	          <%= link_to('Log in', new_user_session_path, class: "button btn btn-default navbar-btn") %>
	        <% end %>
	      </div>
	    </div>
	  </div>
	</nav>
</nav>

<%= yield %>
 <%= yield :scripts %>

</body>
</html>
